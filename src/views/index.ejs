    <script>

        let currentState = '';
        const sections = document.querySelectorAll('#profile section');
        const buttons = document.querySelectorAll('.nav-bar .nav-bar-links');

        /* variables de entorno JS  (estado de la pagina) */

        const hideAllSections = () => {
            sections.forEach(s => { s.style.display = "none" });
        }

        const showAllSections = () => {
            sections.forEach(s => { s.style.display = "block" })
        }
        /* muestro solo la seccion de la pagina que pide el estado */
        const showSection = (id) => {
            document.getElementById(id).style.display = "block"
        }

        const updateNavbar = (id) => {
            buttons.forEach(b => {
                b.style.color = b.dataset.click === id ? 'gray' : 'black'
            });

        }

        const changeState = (id) => {
            hideAllSections();
            if (id === 'profile') {
                document.querySelectorAll('#profile #work, #profile #projects, #profile #contact-me').forEach(s => {
                    s.style.display = "block"
                });
            } else if (id === 'contact-me') {
                document.querySelectorAll(' #profile #contact-me, #profile #location').forEach(s => {
                    s.style.display = "block"
                });
            } else {
                showSection(id); // Pass the id here
            }
            updateNavbar(id);

            currentState = id
        }

        buttons.forEach(b => {
            b.addEventListener('click', (evt) => {
                evt.preventDefault();
                changeState(evt.currentTarget.dataset.click);

            })
        })

        window.onload = () => {
            if (window.location.hash) {
                changeState(window.location.hash.substring(1))
            } else {
                showAllSections()
            }
        }



        /* animacion del nav bar al scrollear */
        window.addEventListener('scroll', function () {
            const navBarContainer = document.getElementById('navBar-container');
            const scrollPosition = window.pageYOffset || document.documentElement.scrollTop;

            if (scrollPosition > 250) {
                navBarContainer.style.opacity = '0.6';
                navBarContainer.style.background = 'none';

                navBarContainer.style.backdropFilter = 'blur(4px)';
            } else {
                navBarContainer.style.opacity = '1';
                navBarContainer.style.background = '#fff';
            }

            navBarContainer.addEventListener('mouseover', function () {
                navBarContainer.style.opacity = '1';
                navBarContainer.style.backdropFilter = 'blur(2px)';
            });

            navBarContainer.addEventListener('mouseout', function () {
                navBarContainer.style.opacity = '0.6';
            });

        });


    </script>
